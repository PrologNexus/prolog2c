#!/bin/scheme /grass/19/boot
;;;; compile + run program in optimized mode -*- Scheme -*-


(require 'sh)

;(run-verbose #t)
(define args (command-line-arguments))
(define file (car args))
(define bfile (basename file))
(define xfile (strip-suffix bfile))
(define cfile (replace-suffix "c" bfile))

(let ((s (suffix file)))
  (unless (string=? "c" s)
    (run (./pc ,file -o ,cfile))))

(run (gcc -std=gnu99 -I. -save-temps=obj -O3 -fomit-frame-pointer -fwrapv 
	  -fno-strict-aliasing ,cfile -o ,xfile -lm -DUNSAFE))
(exit (run* (,(string-append "./" xfile) ,@(cdr args))))
